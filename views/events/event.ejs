<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #f7f7f7;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 20px;
            background-color: #333;
            color: #fff;
        }

        .logo {
            display: flex;
            align-items: center;
        }

        .logo img {
            width: 40px;
            height: 40px;
            margin-right: 10px;
        }

        .logo span {
            font-weight: bold;
        }

        .search-bar {
            display: flex;
            align-items: center;
            background-color: #fff;
            padding: 5px;
            border-radius: 4px;
        }

        .search-bar input {
            border: none;
            outline: none;
            padding: 5px;
            width: 200px;
        }

        .search-bar i {
            margin-left: 5px;
            cursor: pointer;
        }

        .sidebar {
            width: 200px;
            background-color: #333;
            color: #fff;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 20px 0;
        }

        .sidebar ul li {
            padding: 10px 20px;
            cursor: pointer;
        }

        .sidebar ul li:hover {
            background-color: #555;
        }

        .sidebar ul li i {
            margin-right: 10px;
        }

        .content {
            margin-left: 200px;
            padding: 20px;
        }

        .add-button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-bottom: 10px;
        }

        .add-button:hover {
            background-color: #45a049;
        }

        .table-container {
            max-height: 200px; /* Ajustez la hauteur maximale souhaitée pour le tableau */
            overflow-y: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 4px;
        }

        th, td {
            padding: 8px 12px; /* Espacement interne des cellules du tableau */
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
        }

        .event-card {
            background-color: #fff;
            border-radius: 4px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 8px 12px; /* Espacement interne des cartes d'événement */
            margin-bottom: 10px;
            transition: box-shadow 0.3s ease;
        }

        .event-card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .profile {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            margin-bottom: 20px;
        }

        .profile img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .profile .username {
            color: #333;
            font-weight: bold;
            margin-right: 10px;
        }

        .profile .settings-icon {
            color: #333;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="logo">
            <img src="logo.png" alt="Logo de l'application">
            <span>Mon application</span>
        </div>
        <div class="search-bar">
            <input type="text" placeholder="Rechercher...">
            <i class="fas fa-search"></i>
        </div>
    </div>

    <div class="sidebar">
        <ul>
            <li onclick="redirectToUsers()"><i class="fas fa-users"></i> Utilisateurs</li>
            <li onclick="reloadPage()"><i class="fas fa-users-cog"></i> Événements</li>
            <li onclick="redirectToOrganisateurs()"><i class="fas fa-users-cog"></i> Organisateurs</li>
            <li onclick="redirectToCars()"><i class="fas fa-car"></i> Cars</li>
        </ul>
    </div>
    
    <script>
        function redirectToOrganisateurs() {
            window.location.href = "/organisateurs";
        }
        function redirectToUsers() {
        window.location.href = "/users";
        }

        function reloadPage() {
        window.location.reload()
        } 
        function redirectToCars() {
        window.location.href = "/cars";
        }


        

        
    </script>

    <div class="content">
        <div class="profile">
            <img src="profile.jpg" alt="Photo de profil">
            <span class="username">Nom d'utilisateur</span>
            <i class="fas fa-cog settings-icon"></i>
        </div>

        <button id="add-button" class="add-button">Ajouter</button>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Date de départ</th>
                        <th>Prix</th>
                        <th>Description</th>
                        <th>Places disponibles</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% events.forEach((event)=> { %>
                        <tr class="event-card" data-event-id="<%= event.id %>">
                            <td><%= event.nameDestination %></td>
                            <td><%= event.Dateofdeparture %></td>
                            <td><%= event.prix %></td>
                            <td><%= event.description %></td>
                            <td><%= event.maximumNumberOfplaces %></td>
                            <td>
                                <a href="#" class="delete-link" data-event-id="<%= event.id %>">Supprimer</a>
                                <br>
                                <a href="#" class="edit-link">Modifier</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script>
const deleteLinks = document.querySelectorAll('.delete-link');

deleteLinks.forEach((link) => {
    link.addEventListener('click', async (event) => {
        event.preventDefault();
        const eventId = link.dataset.eventId;
        await deleteEvent(eventId);
    });
});

async function deleteEvent(eventId) {
    try {
        const response = await fetch(`/api/events/${eventId}`, {
            method: 'DELETE',
        });
        const data = await response.json();
        console.log(data.deletedEvent);
        // Faire d'autres actions après la suppression de l'événement si nécessaire

        // Mettre à jour le tableau des événements
        const tableBody = document.querySelector('tbody');
        const eventRow = document.querySelector(`tr[data-event-id="${eventId}"]`);
        tableBody.removeChild(eventRow);
    } catch (error) {
        console.error(error);
    }
}
document.getElementById('add-button').addEventListener('click', function() {
  window.location.href = 'events/create'; // Redirige vers la page createUser.ejs
});


    </script>
    
</body>
</html>
